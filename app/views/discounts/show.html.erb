<%= render partial: "shared/nav" %>

<div id="discount_attributes">
  <h3>Name: <%= @discount.name %></h1>
  <h4>Discount Quantity: <%= @discount.discount_quantity %></h3>
  <h4>Discount Percentage: <%= number_to_percentage(@discount.discount_percentage * 100, precision: 0) %></h3>
</div>

<div id="link_to_edit_discount">
  <p><%= link_to "Edit #{@discount.name}", edit_merchant_discount_path(@merchant, @discount) %></p>
</div>

